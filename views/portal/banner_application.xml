<odoo>
    <data>
        <template id="bannerApplication" name="Trademeda Advertise">
         <xpath expr="." position="inside">
            <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@300;400;600;700&amp;display=swap" rel="stylesheet"/>
            <link href="https://fonts.cdnfonts.com/css/helvetica-neue-55" rel="stylesheet"/>
            <link href="https://fonts.cdnfonts.com/css/avenir" rel="stylesheet"/> 
            <link href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&amp;display=swap" rel="stylesheet"/>  
            <link rel="stylesheet" type="text/css" href="/trademeda/static/src/css/banner_application.css"/>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>
        </xpath>

        <t t-call="trademeda.header"/>
        <main class="">
            <h1 class="">Advertise With Us</h1>
            <div class="pricing-table">
                <!-- Silver Plan -->
                <div class="pricing-plan">
                    <h2><span class="icon">★</span>15 Days</h2>
                    <p>Starts From</p>
                    <div class="price">₹15000 + <small>18% GST*</small></div>
                    <ul>
                        
                        <li><button class="get_started_btn">Get Started</button></li>

                    </ul>
                </div>

                <!-- Gold Plan -->
                <div class="pricing-plan best-value">
                    <h2><span class="icon">★</span>30 Days</h2>
                    <p>Starts From</p>
                    <div class="price">₹23,999*<small>Total for 6 months (Only ₹4,000/month)</small></div>
                    <ul>
                        
                        <li><button class="get_started_btn">Get Started</button></li>
                    </ul>
                </div>

                <!-- Gold+ Plan -->
                <div class="pricing-plan">
                    <h2><span class="icon">★</span>50 Days</h2>
                    <p>Starts From</p>
                    <div class="price">₹29,999*<small>Total for 6 months (Only ₹5,000/month)</small></div>
                    <ul>
                        
                        <li><button class="get_started_btn">Get Started</button></li>
                    </ul>
                </div>

                <div class="pricing-plan">
                    <h2><span class="icon">★</span>75 days</h2>
                    <p>Starts From</p>
                    <div class="price">₹29,999*<small>Total for 6 months (Only ₹5,000/month)</small></div>
                    <ul>
                        
                        <li><button class="get_started_btn">Get Started</button></li>
                    </ul>
                </div>

                <div class="pricing-plan">
                    <h2><span class="icon">★</span>100 Days</h2>
                    <p>Starts From</p>
                    <div class="price">₹29,999*<small>Total for 6 months (Only ₹5,000/month)</small></div>
                    <ul>
                        
                        <li><button class="get_started_btn">Get Started</button></li>
                    </ul>
                </div>
            </div>

        </main>
        </template>
    </data>
</odoo>