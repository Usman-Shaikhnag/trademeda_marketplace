<odoo>
    <!-- Action definition -->
    
    <record id="action_product_category" model="ir.actions.act_window">
        <field name="name">Product Category</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.categories</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Product Category</p>
        </field>
    </record>

    <record id="action_product_subcategory" model="ir.actions.act_window">
        <field name="name">Product Subcategory</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.subcategories</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Product Subcategory</p>
        </field>
    </record>

    <record id="action_product_subsubcategory" model="ir.actions.act_window">
        <field name="name">Product Sub-Subcategory</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.subsubcategories</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Product Sub-Subcategory</p>
        </field>
    </record>

    <record id="action_product_template" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Products</p>
        </field>
    </record>

    <record id="action_countries" model="ir.actions.act_window">
        <field name="name">Countries</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.country</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Countries</p>
        </field>
    </record>

    <record id="action_rfq" model="ir.actions.act_window">
        <field name="name">RFQ</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">trademeda.rfq</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">RFQ</p>
        </field>
    </record>

    <record id="action_quotations" model="ir.actions.act_window">
        <field name="name">Quotations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rfq.quotations</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Quotations</p>
        </field>
    </record>

    <!-- Menu structure -->
    <menuitem id="menu_trademeda" name="Trademeda"  sequence="10"/>
    <menuitem id="submenu_products" name="Products" parent="menu_trademeda" sequence="10"/>
    <menuitem id="submenu_product_category" name="Product Categories" parent="submenu_products" action="action_product_category" sequence="10"/>
    <menuitem id="submenu_product_subcategory" name="Product Subcategories" parent="submenu_products" action="action_product_subcategory" sequence="11"/>
    <menuitem id="submenu_product_subsubcategory" name="Product Sub-Subcategories" parent="submenu_products" action="action_product_subsubcategory" sequence="11"/>
    <menuitem id="submenu_product_template" name="Products" parent="submenu_products" action="action_product_template" sequence="12"/>
    <menuitem id="submenu_country" name="Countries" parent="submenu_products" action="action_countries" sequence="19"/>
    <menuitem id="menu_rfq" name="RFQ" parent="menu_trademeda" sequence="20"/>
    <menuitem id="submenu_rfq" name="RFQ" parent="menu_rfq" action="action_rfq" sequence="10"/>
    <menuitem id="submenu_quotations" name="Quotations" parent="menu_rfq" action="action_quotations" sequence="20"/>


</odoo>