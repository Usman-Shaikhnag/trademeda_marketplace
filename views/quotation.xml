<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>


        <record id="rfq_quotation_form_view" model="ir.ui.view">
            <field name="name">rfq.quotations.form</field>
            <field name="model">rfq.quotations</field>
            <field name="arch" type="xml">
                <form string="Quotations">
                    
                    <group>
                        <group>
                            <field name="quotation_no"/>
                            <field name="rfq_id"/>
                            <field name="partner_id"/>
                            <field name="contact_name"/>
                        </group>

                        <group>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="country_id"/>
                        </group>
                        <field name="message" />
                    </group>
                    
                </form>
                
            </field>
        </record>

    <record id="view_tree_trademeda_quotations" model="ir.ui.view">
        <field name="name">rfq.quotations.tree</field>
        <field name="model">rfq.quotations</field>
        <field name="arch" type="xml">
            <tree string="Product Category">
                <field name="quotation_no"/>
                <field name="rfq_id"/>
                <field name="partner_id"/>
                <field name="company_name"/>
                <field name="contact_name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="country_id"/>

            </tree>
        </field>
    </record>


    </data>
</odoo>